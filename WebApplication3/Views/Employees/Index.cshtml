@model IEnumerable<WebApplication3.Models.Employees>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contractTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.roleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.roleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.roleDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hourlySalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.monthlySalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.contractTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.roleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.roleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.roleDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hourlySalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.monthlySalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
        }
        </tbody>
</table>
